<h2 class="color-gray">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-item">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: 'form-field', autofocus: true %>
  </div>

  <div class="form-item">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: 'form-field', autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-item">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="form-item">
    <%= f.submit "Log in", class: 'btn btn-border blue' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>


