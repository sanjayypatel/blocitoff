
<h2 class="color-gray">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-item">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: 'form-field', autofocus: true, autocomplete: "off" %>
  </div>

  <div class="form-item">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: 'form-field', autocomplete: "off" %>
  </div>

  <div class="form-item">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: 'form-field', autocomplete: "off" %>
  </div>

  <div class="form-item">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: 'form-field', autocomplete: "off" %>
  </div>

  <div class="form-item">
    <%= f.submit "Sign up", class: 'btn btn-border blue' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

